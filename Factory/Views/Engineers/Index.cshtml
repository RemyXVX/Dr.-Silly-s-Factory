@{
  Layout = "_Layout";
}

@using Factory.Models;
@model List<Factory.Models.Engineer>;

<h1>Engineers</h1>

@if (@Model.Count == 0)
{
  <h3>No Engineers as of yet. Lets input some?</h3>
} 

@foreach (Engineer engineer in Model)
{
  <li>@Html.ActionLink($"{engineer.EngineerName}", "Details", new { id = engineer.EngineerId }) | @engineer.Machine.MachineName </li>
}
<br>
<div>
  <span>
      <span>@Html.ActionLink("Add new Engineer", "Create", "Engineers")</span>
      <br>
      <span>@Html.ActionLink("Back to home", "Index", "Home")</span>
  </span>
</div>
