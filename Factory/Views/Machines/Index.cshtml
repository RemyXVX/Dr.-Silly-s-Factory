@{
  Layout = "_Layout";
}

@using Factory.Models;

<h1>Machine(s):</h1>
<hr />

<div class="machine">
@if (@Model.Count == 0)
{
  <h3>No machine(s) as of yet. Lets input some?</h3>
} 

@foreach (Machine machine in Model)
{
  <li>@Html.ActionLink($"{machine.MachineName}", "Details", new { id = machine.MachineId })</li>
}
</div>

<br>
<div>
  <span>
      <span>@Html.ActionLink("Add New Machine", "Create")</span>
      <br>
      <span>@Html.ActionLink("To Engineer", "Index", "Engineers")</span>
      <br>
      <span>@Html.ActionLink("Home", "Index", "Home")</span>
  </span>
</div>
