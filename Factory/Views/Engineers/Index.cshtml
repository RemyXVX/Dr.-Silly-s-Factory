@{
  Layout = "_Layout";
}

@using Factory.Models;
@model List<Factory.Models.Engineer>;

<h1>Engineers</h1>
<hr />

<div class="engineer">
@if (@Model.Count == 0)
{
  <h3>No Engineers as of yet. Lets input some?</h3>
} 

@foreach (Engineer engineer in Model)
{
  <li>@Html.ActionLink($"{engineer.EngineerName}", "Details", new { id = engineer.EngineerId })</li>
}
</div>

<br>
<div>
  <span>
      <span>@Html.ActionLink("Add New Engineer", "Create", "Engineers")</span>
      <br>
      <span>@Html.ActionLink("To Machines", "Index", "Machines")</span>
      <br>
      <span>@Html.ActionLink("Home", "Index", "Home")</span>
  </span>
</div>
